{
  "name": "@app/backend",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "sourceRoot": "libs/app/backend/src",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "libs/app/backend/dist",
          "main": "libs/app/backend/src/index.ts",
          "tsConfig": "libs/app/backend/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      },
      "lint:fix": {
        "executor": "@nx/eslint:lint",
        "options": {
          "fix": true
        }
      },
      "prisma": {
        "command": "prisma",
        "options": {
          "cwd": "libs/app/backend"
        }
      },
      "prisma:push": {
        "command": "prisma db push",
        "options": {
          "cwd": "libs/app/backend"
        }
      },
      "migrate": {
        "command": "prisma migrate dev",
        "options": {
          "cwd": "libs/app/backend"
        }
      },
      "generate-types": {
        "command": "prisma generate",
        "options": {
          "cwd": "libs/app/backend"
        }
      }
    },
    "tags": [
      "scope:app",
      "type:backend"
    ]
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11",
    "@core/backend": "0.0.1",
    "@nestjs/common": "^10.0.2",
    "nestjs-pino": "^4.4.0",
    "@nestjs/core": "^10.0.2",
    "zod": "^3.24.2",
    "@nestjs/config": "^4.0.2"
  }
}
